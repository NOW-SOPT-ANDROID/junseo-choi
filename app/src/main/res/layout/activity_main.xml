<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".ui.main.MainActivity">

    <data>

        <variable
            name="viewModel"
            type="com.sopt.now.ui.main.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/alMainAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:gravity="center"
            android:paddingVertical="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvMainTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tv_main_title"
                android:textAppearance="@style/headline1"
                android:textColor="@color/white" />
        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/ivMainProfileBackground"
            blurRadius="@{5}"
            imageUrl="@{viewModel.tempProfileBackgroundImageUrl}"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alMainAppBar" />

        <ImageView
            android:id="@+id/ivMainProfile"
            cornerRadius="@{30f}"
            imageUrl="@{viewModel.tempProfileImageUrl}"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="150dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alMainAppBar" />

        <TextView
            android:id="@+id/tvMainNickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="@{viewModel.userInfo.nickname}"
            android:textAppearance="@style/headline1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivMainProfile"
            tools:text="최준서" />

        <TextView
            android:id="@+id/tvMainUsernameTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="60dp"
            android:text="@string/tv_main_username_title"
            android:textAppearance="@style/title1"
            android:textColor="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMainNickname" />

        <TextView
            android:id="@+id/tvMainUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:text="@{viewModel.userInfo.username}"
            android:textAppearance="@style/body1"
            app:layout_constraintBottom_toBottomOf="@id/tvMainUsernameTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvMainUsernameTitle"
            tools:text="최준서" />

        <TextView
            android:id="@+id/tvMainPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="24dp"
            android:text="@string/tv_main_password_title"
            android:textAppearance="@style/title1"
            android:textColor="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMainUsernameTitle" />

        <TextView
            android:id="@+id/tvMainPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:text="@{viewModel.userInfo.password}"
            android:textAppearance="@style/body1"
            app:layout_constraintBottom_toBottomOf="@id/tvMainPasswordTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvMainPasswordTitle"
            tools:text="12345678" />

        <TextView
            android:id="@+id/tvMainDrinkCapacityTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="24dp"
            android:text="@string/tv_main_drink_capacity_title"
            android:textAppearance="@style/title1"
            android:textColor="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMainPasswordTitle" />

        <TextView
            android:id="@+id/tvMainDrinkCapacity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="80dp"
            android:text="@{String.valueOf(viewModel.userInfo.drinkCapacity)}"
            android:textAppearance="@style/body1"
            app:layout_constraintBottom_toBottomOf="@id/tvMainDrinkCapacityTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvMainDrinkCapacityTitle"
            tools:text="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>